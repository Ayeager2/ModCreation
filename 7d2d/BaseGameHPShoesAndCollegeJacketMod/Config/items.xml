<chibimods>
	<append xpath="/items">

		<item name="highPerformanceRunningShoesModSchematic">
			<property name="Extends" value="schematicMaster"/>
			<property name="ItemTypeIcon" value="book"/>
			<property name="AltItemTypeIcon" value="book_read"/>
			<property name="CreativeMode" value="Player"/>
			<property name="CustomIcon" value="apparelRunningShoesRegular"/>
			<property name="CustomIconTint" value="86,255,109"/>
			<property name="Unlocks" value="highPerformanceRunningShoesMod"/>
			<effect_group tiered="false">
				<triggered_effect trigger="onSelfPrimaryActionEnd" action="ModifyCVar" cvar="highPerformanceRunningShoesMod" operation="set" value="1"/>
				<triggered_effect trigger="onSelfPrimaryActionEnd" action="GiveExp" exp="50"/>
			</effect_group>
		</item>		

		<item name="collegeJacketModSchematic">
			<property name="Extends" value="schematicMaster"/>
			<property name="ItemTypeIcon" value="book"/>
			<property name="AltItemTypeIcon" value="book_read"/>
			<property name="CreativeMode" value="Player"/>
			<property name="CustomIcon" value="apparelCoatJacketLetterZU"/>
			<property name="Unlocks" value="collegeJacketArmorMod"/>
			<effect_group tiered="false">
				<triggered_effect trigger="onSelfPrimaryActionEnd" action="ModifyCVar" cvar="collegeJacketArmorMod" operation="set" value="1"/>
				<triggered_effect trigger="onSelfPrimaryActionEnd" action="GiveExp" exp="50"/>
			</effect_group>
		</item>

	</append>
</chibimods>

